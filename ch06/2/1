alter table sample62 modify newcol varchar(20);
desc sample62; #newcol의 자료형을 varchar(20)으로 변경

alter table sample62 change newcol c varchar(20);
desc sample62; #newcol의 이름을 c로 변경

alter table sample62 drop c;
desc sample62; #c열 삭제
